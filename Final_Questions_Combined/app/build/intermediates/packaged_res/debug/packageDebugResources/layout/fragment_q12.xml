<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img">

    

    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="@string/question"
        android:textSize="22sp"
    android:textStyle="bold"
    android:textColor="@color/Navy"
    app:layout_constraintBottom_toTopOf="@+id/buttonAnswer1"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.676" />

    <!-- Answer Button 1 -->
    <Button
        android:id="@+id/buttonAnswer1"
        android:layout_width="250dp"
        android:layout_height="63dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="81dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/Teal"
    android:text="@string/answer_1"
    android:textSize="18sp"
    android:textStyle="bold"
    android:textColor="#ffffff"
    app:layout_constraintBottom_toTopOf="@+id/buttonAnswer2"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/questionTextView" />

    <!-- Answer Button 2 -->
    <Button
        android:id="@+id/buttonAnswer2"
        android:layout_width="250dp"
        android:layout_height="63dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="81dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/Teal"
    android:text="@string/answer_2"
    android:textSize="18sp"
    android:textStyle="bold"
    android:textColor="#ffffff"
    app:layout_constraintBottom_toTopOf="@+id/buttonAnswer3"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/buttonAnswer1" />

    <!-- Answer Button 3 -->
    <Button
        android:id="@+id/buttonAnswer3"
        android:layout_width="250dp"
        android:layout_height="63dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="81dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/Teal"
    android:text="@string/answer_3"
    android:textSize="18sp"
    android:textStyle="bold"
    android:textColor="#ffffff"
    app:layout_constraintBottom_toTopOf="@+id/buttonAnswer4"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/buttonAnswer2" />

    <!-- Answer Button 4 -->
    <Button
        android:id="@+id/buttonAnswer4"
        android:layout_width="250dp"
        android:layout_height="63dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="81dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/Teal"
    android:text="@string/answer_4"
    android:textSize="18sp"
    android:textStyle="bold"
    android:textColor="#ffffff"
    app:layout_constraintBottom_toTopOf="@+id/buttonAnswer5"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/buttonAnswer3"
    app:layout_constraintVertical_bias="0.394" />

    <!-- Answer Button 5 -->
    <Button
        android:id="@+id/buttonAnswer5"
        android:layout_width="252dp"
        android:layout_height="64dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="81dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/Teal"
    android:text="@string/answer_5"
    android:textSize="18sp"
    android:textStyle="bold"
    android:textColor="#ffffff"
    app:layout_constraintBottom_toTopOf="@+id/buttonAnswer6"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/buttonAnswer4" />

    <!-- Answer Button 6 -->
    <Button
        android:id="@+id/buttonAnswer6"
        android:layout_width="250dp"
        android:layout_height="63dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="81dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/Teal"
    android:text="@string/answer_6"
    android:textSize="18sp"
    android:textStyle="bold"
    android:textColor="#ffffff"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/buttonAnswer5"
    app:layout_constraintVertical_bias="0.189" />

